<div class="container">
{{#each list}}
<form method="post" action="http://localhost:3000/updateuser/{{this.email}}">
  <fieldset>
    <legend>UPDATE USER DETAILS</legend>
    
    <div class="form-froup row">
    <label  class="col-sm-2 col-form-label" >Emp Email</label>
     <div class="col-sm-10">
    <input type="text" name="email" readonly class="form-control " value={{this.email}} >
      </div>
      </div> 
       <br>
      <div class="form-froup row">
    <label class="col-sm-2 col-form-label" >Emp Name</label>
     <div class="col-sm-10">
    <input type="text"  class="form-control " name="name" value={{this.name}}>
      </div>
      </div>  
      <br>
      <div class="form-froup row">
    <label class="col-sm-2 col-form-label" >Phone </label>
     <div class="col-sm-10">
    <input type="text"  class="form-control " name="phone" value={{this.phone}}>
      </div>
      </div> 
       <br>
      <div class="form-froup row">
    <label  class="col-sm-2 col-form-label"  >Emp City</label>
     <div class="col-sm-10">
    <input type="text"  class="form-control " name="city" value={{this.city}}>
      </div>
      </div>
    <button type="submit" class="btn btn-block btn-primary">UPDATE</button>
  </fieldset>
  <br>
  
</form> 
{{/each}}
</div>      